# Environment variables for Aurora Social Server
# Copy this file to .env and update the values

# PostgreSQL Database Connection
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
# 
# Option 1: Local PostgreSQL installation
# DATABASE_URL="postgresql://postgres:yourpassword@localhost:5432/aurora_social?schema=public"
#
# Option 2: Docker PostgreSQL (recommended for consistency)
# DATABASE_URL="postgresql://postgres:password@localhost:5432/aurora_social?schema=public"
#
# Option 3: Remote PostgreSQL (e.g., Supabase, Railway, Render)
# DATABASE_URL="postgresql://user:password@your-host.com:5432/aurora_social?schema=public"

DATABASE_URL="postgresql://postgres:password@localhost:5432/aurora_social?schema=public"

# JWT Configuration
# Change JWT_SECRET in production!
JWT_SECRET=aurora_socials_super_secret_key_change_in_production_2026
JWT_EXPIRES_IN=7d
